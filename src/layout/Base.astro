---
interface Props {
  title: string;
}

const { title } = Astro.props;
import '@fontsource-variable/open-sans';
---

<style is:global>
  body {
    font-family: "Open Sans", sans-serif;
    font-size: 1rem;
  }
</style>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <slot />
  </body>
</html>
