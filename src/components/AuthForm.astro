---
// src/components/AuthForm.astro
interface Props {
  showProviderButtons?: boolean;
}

const { showProviderButtons = false } = Astro.props;
---

{
  showProviderButtons && (
    <>
      <p>Sign in with</p>
      <form action="/api/auth/signin" method="post">
        <button value="google" name="provider" type="submit">
          Sign in with Google
        </button>
      </form>
    </>
  )
}