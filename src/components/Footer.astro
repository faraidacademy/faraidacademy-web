---
import { Icon } from "astro-icon/components";

const socialMedia = [
    { name: "fa6-brands:square-twitter", url: "https://x.com/" },
    { name: "fa6-brands:square-facebook", url: "https://facebook.com/" },
    { name: "fa6-brands:square-whatsapp", url: "https://wa.me/966558066420" },
    { name: "fa6-brands:telegram", url: "https://t.me/966558066420" },
];
---

<footer class="col">
    <div class="icons">
        {
            socialMedia.map((social) => (
                <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`Link to our ${social.name.split(":")[1]} page`}
                >
                    <Icon name={social.name} size={12} />
                </a>
            ))
        }
    </div>
    
    <div class="copy">© 2025, Faraid Academy. All rights reserved.</div>
    <div class="legal-links row">
        <a href="/terms">Terms of Service</a>
        <span>•</span>
        <a href="/privacy">Privacy Policy</a>
    </div>
</footer>

/* In src/components/Footer.astro */
<style>
    footer {
        padding: 0.5em;
        /* opacity: 0.5;  <--- Consider removing or increasing this, e.g., opacity: 0.8; or remove for full visibility */
        /* OR, if you want the footer slightly transparent but text clear: */
        /* background-color: rgba(var(--your-footer-bg-color-rgb), 0.5); /* Example if you had a background */
        /* color: var(--md-sys-color-on-surface); /* Ensure text color has good contrast */
        width: 100%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.1em; /* This is very small, maybe increase to 0.3em or 0.5em */
        position: fixed;
        bottom: 0;
        /* Ensure the footer doesn't overlay content in a way that hides the link initially */
    }

    .icons {
        display: flex;
        gap: 0.5em; /* Consider increasing if icons are too close */
    }
    .icons a {
        color: inherit; /* This will be affected by footer's opacity */
        text-decoration: none;
        transition: color 0.2s ease;
        display: inline-block;
    }
    .icons a:hover {
        color: #007bff; /* Or your theme's link hover color */
        transform: scale(1.1);
    }

    .legal-links {
        font-size: 0.8em; /* <--- INCREASED: e.g., to 0.8em of footer's font, or 12px, 14px */
        /* Alternatively, use an absolute value: font-size: 12px; */
        gap: 0.5em;
    }

    .legal-links a {
        color: inherit; /* This will be affected by footer's opacity. Ensure high contrast. */
        /* If footer has opacity, you might need to set a more opaque color here, */
        /* but it's better to handle opacity on the footer's background. */
        /* color: var(--md-sys-color-primary); /* Or a distinct link color */
        text-decoration: underline;
    }

    .legal-links a:hover {
        text-decoration: none;
    }

    .copy{
        font-size: 0.7em; /* <--- Slightly increased for better readability */
    }
</style>