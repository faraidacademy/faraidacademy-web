---
import "@fontsource-variable/eb-garamond";
import { Icon } from "astro-icon/components";
---

<header>
    <Icon name="Logo" />
    <h1>FaraidAcademy</h1>
</header>

<style>
    header {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.3em;
        position: fixed;
        top:0;
        padding:1em;
    }
    h1 {
        font-family: "EB Garamond", serif;
        font-weight: 500;
        font-size: 1em;
    }

    [data-icon="Logo"] {
       font-size: 1.5em;
    }
</style>
