---
// src/pages/signin.astro (modified)
import Base from "../layout/Base.astro";
import AuthForm from "../components/AuthForm.astro";
const title = "Sign in";
---

<Base title={title}>
  <main>
    <section>
      <h1>{title}</h1>
      <p>
        New to demo? <a href="/register">Create an account</a>
      </p>
      <AuthForm action="/api/auth/signin" submitText="Sign In" showProviderButtons />
    </section>
  </main>
</Base>