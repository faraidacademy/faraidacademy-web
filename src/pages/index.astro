---
import Base from "../layout/Base.astro";

const isLoggedIn = !!Astro.locals.email;
---

<Base title="Home">
  <h1>Welcome</h1>
  {
    isLoggedIn ? (
      <p>
        You are logged in. <a href="/dashboard">Go to Dashboard</a>
      </p>
    ) : (
      <p>
        <a href="/signin">Sign in</a> or <a href="/register">Register</a> to
        access the dashboard.
      </p>
    )
  }
</Base>